<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdemyApp.GLoginPage"
			 BackgroundColor="#127ac7">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<StackLayout Grid.Row="0" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center">
			<Label Text="Welcome to Xamarin" TextColor="#fff" FontSize="30" FontAttributes="Bold"/>
			<Label Text="Cross-platform apps made easy" TextColor="#fff" FontSize="18"/>
		</StackLayout>
		<Button Grid.Row="1" Grid.Column="0" TextColor="#fff" BackgroundColor="#1dabf0" Text="Login"/>
		<Button Grid.Row="2" Grid.Column="0" TextColor="#fff" BackgroundColor="#1dabf0" Text="Register"/>
	</Grid>
</ContentPage>